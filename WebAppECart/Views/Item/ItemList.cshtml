@model IEnumerable<WebAppECart.ViewModel.ItemListModel>
@{
    ViewBag.Title = "ItemList";
    Layout = "~/Views/Shared/_OwnerViewLayout.cshtml";
}
<!--Owner action select page-->
<style>

    .cell {
        max-width: 50px; /* tweak me please */
        white-space: nowrap;
        overflow: hidden;
    }
</style>
<h2>ItemList</h2>
<article id="main">
    <section class="wrapper type2" style="padding-top:3em">
        <div class="inner" style="width:80%">
            <i class="fas fa-long-arrow-alt-left"></i>@Html.ActionLink("Back", "Index", "Owner")
            @*<h3 style="text-align: right">UserName :@Session["UserName"].ToString()</h3>*@
            <table>
                <tbody>
                    <tr>
                        <th>Item code</th>
                        <th>Image</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Description</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ItemCode</td>
                            <td><img src="@Url.Content(item.ImagePath)" style="width:100px; height:100px"></td>
                            <td class="cell">@item.ItemId</td>
                            <td>@item.ItemName</td>
                            <td>@item.ItemPrice</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                @Html.ActionLink("Create New", "Index","Item")
            </p>
            <table class="table">
                <tr>

                    <th>
                        @Html.ActionLink("Category", "ItemSort", new { sortOrder = ViewBag.CateSortParm })
                    </th>
                    <th>
                        Item Code
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Item ID
                    </th>
                    <th>
                        @Html.ActionLink("Item Name", "ItemSort", new { sortOrder = ViewBag.NameSortParm })
                    </th>
                    <th>
                        Item Price
                    </th>
                    <th>
                        Description
                    </th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemCategory</td>
                        <td>@item.ItemCode</td>
                        <td><img src="@Url.Content(item.ImagePath)" style="width:100px; height:100px"></td>
                        <td class="cell">@item.ItemId</td>
                        <td>@item.ItemName</td>
                        <td>@item.ItemPrice</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </table>

        </div>
    </section>
</article>
